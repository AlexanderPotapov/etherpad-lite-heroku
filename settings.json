{
  "title": "ToruPad",
  "favicon": "favicon.ico",
  "ssl": false,
  "dbType": "postgres",
  "dbSettings": "postgres://etherpad:etherpad@localhost:5433/etherpad",
  "defaultPadText": "Topic content here..",
  "requireSession": false,
  "editOnly": true,
  "sessionNoPassword": false,
  "minify": false,
  "maxAge": 21600,
  "abiword": null,
  "requireAuthentication": true,
  "requireAuthorization": true,
  "trustProxy": true,
  "disableIPlogging": false,
  "socketTransportProtocols": [
    "xhr-polling",
    "jsonp-polling",
    "htmlfile"
  ],
  "loglevel": "DEBUG",
  "logconfig": {
    "appenders": [
      {
        "type": "console"
      }
    ]
  },
  "padOptions": {
    "noColors": true,
    "showControls": true,
    "showChat": false,
    "showLineNumbers": false,
    "useMonospaceFont": false,
    "userName": false,
    "userColor": false,
    "rtl": false,
    "alwaysShowChat": false,
    "chatAndUsers": false,
    "lang": "en-gb"
  },
  "toolbar": {
    "left": [
      [
        "bold",
        "italic",
        "underline",
        "strikethrough"
      ],
      [
        "orderedlist",
        "unorderedlist",
        "indent",
        "outdent"
      ],
      [
        "alignLeft",
        "alignCenter",
        "alignRight"
      ],
      [
        "undo",
        "redo"
      ]
    ],
    "right": [
      [
        "addImage"
      ],
      [
        "timeslider"
      ],
      [
        "epAuthorshipToggle"
      ],
      [
        "epCitizenOSUserListToggle"
      ]
    ],
    "timeslider": [
      [
        "timeslider_returnToPad"
      ]
    ]
  },
  "ep_themes_ext": {
    "default": [
      "https://citizenos.com/static/styles/etherpad.css"
    ],
    "citizenos.com": [
      "https://citizenos.com/static/styles/etherpad.css"
    ],
    "rahvaalgatus.ee": [
      "https://rahvaalgatus.ee/css/editorless.css"
    ]
  },
  "ep_webhooks": {
    "apiKey": "superSecretAPIkeySentInXApiKeyHeader",
    "pads": {
      "update": [
        "https://citizenos.com/api/internal/notifications/pads/update"
      ]
    }
  },
